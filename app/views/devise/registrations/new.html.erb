<% description 'Sign up for a free account.' %>
<% keywords 'Share the Food, Sign, Up, Sign Up, Create, User, Account, Free, Create Account, New Donation' %>
<% set_meta_tags index: true %>

<h1><%= title 'Sign Up' %></h1>
<h2>An account is required to add a donation.</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                hint: "This will be displayed alongside your donations." %>
    <%= f.input :email,
                required: true,
                hint: "A confirmation email will be sent to this address. You must confirm your email before you can add a donation. Your email will never be displayed or given away.",
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
