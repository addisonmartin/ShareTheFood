<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", help: "#{@minimum_password_length} characters minimum" %>

  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

  <%= f.submit "Change my password" %>
<% end %>

<%= render "devise/shared/links" %>
