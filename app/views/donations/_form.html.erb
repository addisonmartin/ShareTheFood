
<%= simple_form_for(@donation) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, direct_upload: true %>
    <hr>
    <h2>Location and Pickup Instructions</h2>
    <div class="row">
      <div class="col-6">
        <%= f.input :latitude %>
      </div>
      <div class="col-6">
        <%= f.input :longitude %>
      </div>
    </div>
    <%= f.input :pickup_notes %>
    <%= f.input :available_until %>
    <hr>
    <h2>Allergen Information</h2>
    <div class="row">
      <div class="col-6">
        <%= f.input :is_perishable %>
        <%= f.input :requires_preparation %>
        <%= f.input :is_vegetarian %>
        <%= f.input :is_vegan %>
        <%= f.input :contains_gluten %>
        <%= f.input :contains_peanuts %>
      </div>
      <div class="col-6">
        <%= f.input :contains_tree_nuts %>
        <%= f.input :contains_dairy %>
        <%= f.input :contains_soy %>
        <%= f.input :contains_egg %>
        <%= f.input :contains_fish %>
        <%= f.input :contains_shellfish %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="btn-group">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to 'Back', :back, class: 'btn btn-outline-primary' %>
    </div>
  </div>
<% end %>
