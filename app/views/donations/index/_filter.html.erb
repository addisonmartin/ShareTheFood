  <div class="row justify-content-center mt-2">
    <div class="btn-group">
      <%= f.submit 'Filter', class: 'btn btn-primary' %>
      <%= link_to 'Clear', donations_path, class: 'btn btn-outline-danger' %>
    </div>
  </div>
<% end %>
