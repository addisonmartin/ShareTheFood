<%= search_form_for @query do |f| %>
  <div class="row justify-content-center">
    <%= f.label :is_perishable_eq, 'Is Perishable?' %>
    <%= f.select :is_perishable_eq, [['Yes', true], ['No', false]], include_blank: 'Any' %>

    <%= f.label :requires_preparation_eq, 'Requires Preparation?' %>
    <%= f.select :requires_preparation_eq, [['Yes', true], ['No', false]], include_blank: 'Any' %>

    <%= f.label :is_vegetarian_eq, 'Is Vegetarian?' %>
