    <%= f.label :contains_gluten_eq, 'Contains Gluten?' %>
    <%= f.select :contains_gluten_eq, [['Yes', true], ['No', false]], include_blank: 'Any' %>

    <%= f.label :contains_peanuts_eq, 'Contains Peanuts?' %>
    <%= f.select :contains_peanuts_eq, [['Yes', true], ['No', false]], include_blank: 'Any' %>

    <%= f.label :contains_tree_nuts_eq, 'Contains Tree Nuts?' %>
