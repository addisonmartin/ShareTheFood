  <%= form_tag donations_path, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag 'search', params[:search], placeholder: "Search donation's name, description, pickup notes, ...", class: 'form-control' %>
      <div class="input-group-append">
        <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
          <%= icon('search') %> Search
        <% end %>
        <%= link_to 'Clear', donations_path, class: 'btn btn-outline-danger' %>
      </div>
    </div>
  <% end %>
