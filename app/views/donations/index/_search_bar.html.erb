<%= form_tag donations_path, method: :get do %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <%= button_tag type: 'submit', name: nil, class: 'btn btn-primary' do %>
        <%= icon('search') %> Search
      <% end %>
    </div>
    <%= text_field_tag 'search', params[:search], id: 'search', placeholder: "Search donation's name, description, pickup notes, ...", class: 'form-control' %>
    <div class="input-group-append">
      <%= link_to 'Clear Search', donations_path(params.except(:search, :action, :controller).permit!), class: 'btn btn-outline-danger' %>
    </div>
  </div>
<% end %>