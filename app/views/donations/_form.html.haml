= form_with(model: donation, local: true) do |form|
  - if donation.errors.any?
    #error_explanation
      %h2
        = pluralize(donation.errors.count, "error")
        prohibited this donation from being saved:
      %ul
        - donation.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_area :name
  .field
    = form.label :description
    = form.text_area :description
  .field
    = form.label :fresh_until
    = form.datetime_select :fresh_until
  .field
    = form.label :latitude
    = form.text_field :latitude
  .field
    = form.label :longitude
    = form.text_field :longitude
  .field
    = form.label :pickup_notes
    = form.text_area :pickup_notes
  .field
    = form.label :is_perishable
    = form.check_box :is_perishable
  .field
    = form.label :requires_preparation
    = form.check_box :requires_preparation
  .field
    = form.label :is_vegetarian
    = form.check_box :is_vegetarian
  .field
    = form.label :is_vegan
    = form.check_box :is_vegan
  .field
    = form.label :is_gluten_free
    = form.check_box :is_gluten_free
  .field
    = form.label :contains_peanuts
    = form.check_box :contains_peanuts
  .field
    = form.label :contains_tree_nuts
    = form.check_box :contains_tree_nuts
  .field
    = form.label :contains_dairy
    = form.check_box :contains_dairy
  .field
    = form.label :contains_soy
    = form.check_box :contains_soy
  .field
    = form.label :contains_egg
    = form.check_box :contains_egg
  .field
    = form.label :contains_fish
    = form.check_box :contains_fish
  .field
    = form.label :contains_shellfish
    = form.check_box :contains_shellfish
  .actions
    = form.submit
