<div class="row justify-content-center">
  <h1>Viewing <%= @donation.name %> Donation</h1>
</div>

<%= @donation.buttons %>
<br>
<%= render 'donations/show/images_carousel', donation: @donation %>

<p>
  <strong>Donated By:</strong>
  <%= @donation.user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @donation.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @donation.description %>
</p>
<hr>
<%= render 'donations/show/map' %>
<hr>
<div class="row justify-content-center">
  <h2>Allergen Information</h2>
</div>
<div class="row">
  <div class="col-6" align="center">
    <p>
      <strong>Is Perishable?</strong>
      <%= as_yes_or_no(@donation.is_perishable) %>
    </p>

    <p>
      <strong>Requires Preparation?</strong>
      <%= as_yes_or_no(@donation.requires_preparation) %>
    </p>

    <p>
      <strong>Is Vegetarian?</strong>
      <%= as_yes_or_no(@donation.is_vegetarian) %>
    </p>

    <p>
      <strong>Is Vegan?</strong>
      <%= as_yes_or_no(@donation.is_vegan) %>
    </p>

    <p>
      <strong>Contains Gluten?</strong>
      <%= as_yes_or_no(@donation.contains_gluten) %>
    </p>

    <p>
      <strong>Contains Peanuts?</strong>
      <%= as_yes_or_no(@donation.contains_peanuts) %>
    </p>
  </div>

  <div class="col-6" align="center">
    <p>
      <strong>Contains Tree Nuts?</strong>
      <%= as_yes_or_no(@donation.contains_tree_nuts) %>
    </p>

    <p>
      <strong>Contains Dairy?</strong>
      <%= as_yes_or_no(@donation.contains_dairy) %>
    </p>

    <p>
      <strong>Contains Soy?</strong>
      <%= as_yes_or_no(@donation.contains_soy) %>
    </p>

    <p>
      <strong>Contains Egg?</strong>
      <%= as_yes_or_no(@donation.contains_egg) %>
    </p>

    <p>
      <strong>Contains Fish?</strong>
      <%= as_yes_or_no(@donation.contains_fish) %>
    </p>

    <p>
      <strong>Contains Shellfish?</strong>
      <%= as_yes_or_no(@donation.contains_shellfish) %>
    </p>
  </div>
</div>
