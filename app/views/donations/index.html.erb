<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Pickup notes</th>
      <th>Available until</th>
      <th>Is perishable</th>
      <th>Requires preparation</th>
      <th>Is vegetarian</th>
      <th>Is vegan</th>
      <th>Is gluten free</th>
      <th>Contains peanuts</th>
      <th>Contains tree nuts</th>
      <th>Contains dairy</th>
      <th>Contains soy</th>
      <th>Contains egg</th>
      <th>Contains fish</th>
      <th>Contains shellfish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.user_id %></td>
        <td><%= donation.name %></td>
        <td><%= donation.description %></td>
        <td><%= donation.latitude %></td>
        <td><%= donation.longitude %></td>
        <td><%= donation.pickup_notes %></td>
        <td><%= donation.available_until %></td>
        <td><%= donation.is_perishable %></td>
        <td><%= donation.requires_preparation %></td>
        <td><%= donation.is_vegetarian %></td>
        <td><%= donation.is_vegan %></td>
        <td><%= donation.is_gluten_free %></td>
        <td><%= donation.contains_peanuts %></td>
        <td><%= donation.contains_tree_nuts %></td>
        <td><%= donation.contains_dairy %></td>
        <td><%= donation.contains_soy %></td>
        <td><%= donation.contains_egg %></td>
        <td><%= donation.contains_fish %></td>
        <td><%= donation.contains_shellfish %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
