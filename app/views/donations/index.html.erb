<div class="row justify-content-center">
  <h1>Available Donations</h1>
</div>
<br>

<%= render 'donations/index/map' %>

<div class="row justify-content-center">
  <%= render 'donations/index/search_bar' %>
</div>

<div class="row justify-content-center">
  <h5><%== pagy_info(@pagination) %></h5>
  <%== pagy_bootstrap_nav_js(@pagination) %>
</div>

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-4">
  <% @donations.each do |donation| %>
    <%= render 'donations/index/donation_card', donation: donation %>
  <% end %>
</div>

<br>
<div class="row justify-content-center">
  <%== pagy_bootstrap_nav_js(@pagination) %>
</div>
