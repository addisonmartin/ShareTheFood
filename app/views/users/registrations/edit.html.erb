<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true,
                hint: 'This is the name that will be displayed alongside your donations.' %>

    <%= f.input :email, required: true,
                hint: 'Your email will never be shared with anyone else.' %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Leave blank if you don't want to change it.",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "Your current password is needed to confirm your changes.",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions btn-group">
    <div class="btn-group btn-group-lg">
      <%= f.button :submit, "Update", class: 'btn btn-primary' %>
      <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
<hr>
<h3>Delete Your Account</h3>
<%= link_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure? This cannot be undone." }, method: :delete, class: 'btn btn-danger' %>
